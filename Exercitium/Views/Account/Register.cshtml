@using Exercitium.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up";
}

<style>
    html,
    body,
    .container-fluid {
        height: 100%;
    }
</style>

<div class="row">
    <div class="col-md-6 offset-md-3 d-flex flex-column align-items-center">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <main class="form-signin w-100 m-auto">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-4">
                    <img class="mb-4" src="~/Images/ExercitiumLogo.png" alt="" width="200" height="200">
                    <h1 class="h3 mb-3 fw-normal">Please register</h1>
                </div>

                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" id="floatingInput" placeholder="John">
                    <label asp-for="FirstName" for="floatingInput">First name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" id="floatingInput" placeholder="Doe">
                    <label asp-for="LastName" for="floatingInput">Last name</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="Email" for="floatingInput">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label asp-for="Password" for="floatingPassword">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingPassword" placeholder="Confirm password">
                    <label asp-for="ConfirmPassword" for="floatingConfirmPassword">Confirm password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div>
                    <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
                </div>
                <br />
                <div class="text-center mb-4">
                    <p>Already a member? <a asp-controller="Account" asp-action="Login">Login</a></p>
                </div>
            </form>
        </main>
    </div>
</div>
